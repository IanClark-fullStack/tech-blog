<div class="container px-5 py-24">
    <div class="lg:w-8/12 md:w-5/12 bg-white mx-auto rounded-lg p-8 flex-col">
        <h2 class="text-gray-900 text-lg mb-1 font-medium title-font">Create a new post</h2>
         <p class="leading-relaxed mb-5 text-gray-600">Add your post content Here</p>
        <form id="newpost-form" class="flex-col md:flex-no-wrap flex-wrap justify-center md:justify-start">
            <input id="newpost-id" type="hidden" name="blogpost_id" value="{{blogpost.id}}"/>
            <input id="newpost-title" type="text" name="blogpost-title" class="bg-white max-w-sm font-mono text-5xl text-grey-400 border-b-2 border-gray-400 focus:outline-none focus:border-black focus:text-black px-2 py-2 mb-4" placeholder="Post Title" type="text">
            <div class="flex-col">
                <textarea class="bg-white w-full font-sans text-grey-400 focus:text-black text-3xl border-b-2 border-gray-400 focus:outline-none focus:border-b-2 focus:border-black px-2 resize-none" id="newpost-body" placeholder="Post Body" name="blogpost-body"></textarea>
            </div>
            
            <div class="w-full">
                <button id="newpost-button" type="submit" class="text-grey-800 my-2 bg-white border-4 border-gray-800 font-mono italic py-2 px-6 focus:text-white focus:bg-black hover:bg-black hover:text-white rounded text-lg">Add Post</button>
            </div>
            
        </form>
    </div>
</div>

<script src="/js/newpost.js"></script>