<div class="py-10 w-2/3 mx-auto md:flex md:space-x-8 space-y-4 md:space-y-0">
    {{> single-post }}
</div>

<div class="lg:w-8/12 md:w-5/12 bg-white mx-auto rounded-lg p-8 flex-col">
    <div id="post-header" class="justify-center items-center">
        <h4 class="font-mono text-center text-4xl">Add a comment</h4>
    </div>

    <form id="commentForm" class="flex-col md:flex-no-wrap flex-wrap justify-center md:justify-start">
        <div class="flex-col">
            <textarea id="comment-content" class="bg-white max-w-sm font-mono text-2xl text-grey-400 border-b-1 border-gray-400 focus:outline-none focus:border-black focus:text-black px-2 py-2 mb-4"></textarea>
        </div>
        <div class="w-full">
            <button id="comment-button" type="submit" class="text-grey-800 my-2 bg-white border-2 border-gray-800 font-mono italic py-1 px-2 focus:text-white focus:bg-black hover:bg-black hover:text-white rounded text-sm">></button>
        </div>
    </form>
</div>

<script src="/js/comment.js"></script> 