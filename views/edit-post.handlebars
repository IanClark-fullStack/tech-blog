
<div class="container px-5 py-24 mx-auto flex">
    <div class="lg:w-1/3 md:w-1/2 bg-white rounded-lg p-8 flex flex-col">
        <h2 class="text-gray-900 text-lg mb-1 font-medium title-font">Edit your post</h2>
         <p class="leading-relaxed mb-5 text-gray-600">Route rendered within dashboard routes. Will redirect after submit.</p>

        <form id="edit-post-form" class="flex md:flex-no-wrap flex-wrap justify-center md:justify-start">
            <input id="post-id" type="hidden" name="blogpost_id" value="{{blogpost.id}}"/>
                <input id="editpost-title" type="text" name="blogpost-title" class="bg-white rounded border border-gray-400 focus:outline-none focus:border-indigo-500 text-base px-4 py-2 mb-4" type="text" value="{{blogpost.title}}">
            
                <textarea id="editpost-content" class="bg-white rounded border border-gray-400 focus:outline-none h-32 focus:border-indigo-500 text-base px-4 py-2 mb-4 resize-none" name="blogpost-body">{{blogpost.post_body}} </textarea>
            <div class="w-full">
                <button id="editpost-button" type="submit" class="text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg">Save</button>
            </div>
            
        </form>
    </div>
</div>

<script src="/js/editpost.js"></script>
